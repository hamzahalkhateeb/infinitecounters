<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ListView
        android:id="@+id/RecyclerView44"
        android:layout_width="410dp"
        android:layout_height="676dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="375dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/GoToInfiniteCounter4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/GoToDescendingCounter4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_all_inclusive_24" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/GoToDescendingCounter4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/GoToAscendingCounter4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GoToInfiniteCounter4"

        app:srcCompat="@drawable/baseline_trending_down_24" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/GoToAscendingCounter4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:clickable="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addcounter4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GoToDescendingCounter4"

        app:srcCompat="@drawable/baseline_trending_up_24" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addcounter4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:clickable="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/GoToAscendingCounter4"

        app:srcCompat="@drawable/baseline_plus_one_24" />



     />
</androidx.constraintlayout.widget.ConstraintLayout>